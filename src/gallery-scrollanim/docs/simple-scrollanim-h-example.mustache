<div id="scrollanim-container">
	<div id="horizontalScrollArea">
	    <div class="bg"></div>
	    <div class="earth"></div>
	    <div class="mg"></div>
	    <div class="fg"></div>
	    <img class="meteor" src="{{{componentAssets}}}/meteor.png" alt="Meteor">
    </div>
</div>

<script>
YUI().use('gallery-scrollanim', function (Y) {
    var animations = [
            {
	           selector: '#horizontalScrollArea',
	           startAt: 0,
	           endAt: 3000, /* should be same as maxScroll config to the widget */
	           onEndAnimate:function( anim ) {
	               //TODO: Now need this so scroll animator will not set display property to none at the end of the animation
	            },
	            keyframes: [
	                { 
	         	        position: 0,
	         		    properties: {
	         			    top: 0
	         		    }
	         	    },
	         	    {
	         		    position: 1,
	         		    ease: TWEEN.Easing.Quadratic.EaseNone,
	         		    onInit: function( anim ) {},
	         		    properties: {
	         		        top: -1000
	         		    }
	         	    }
	            ]
	        }, 
    	    {
	            selector: '.bg',
	            startAt: 0,
	            endAt: 3000,
	            onEndAnimate: function( anim ) {},
	            keyframes: [
	                { 
	         	        position: 0,
	         		    properties: {
                            "background-position" : {
                            	x:0,
                            	y:0
                            }
	         		    }	
	         	    },
	                {
	         	        position: 1,
	         		    ease: TWEEN.Easing.Linear.EaseNone,
	         		    properties: {
                            "background-position" : {
                            	x: -625,
                            	y: -125
                            }
	         		    }
	         	    }
	            ]
	        },    
    	    {
	            selector: '.mg',
	            startAt: 0,
	            endAt: 3000,
	            onEndAnimate: function( anim ) {},
	            keyframes: [
	                { 
	         	        position: 0,
	         		    properties: {
                            "background-position" : {
                            	x:0,
                            	y:0
                            }
	         		    }	
	         	    },
	                {
	         	        position: 1,
	         		    ease: TWEEN.Easing.Linear.EaseNone,
	         		    properties: {
                            "background-position" : {
                            	x: -2500,
                            	y: -500
                            }
	         		    }
	         	    }
	            ]
	        },
	        {
	            selector: '.fg',
	            startAt: 0,
	            endAt: 3000,
	            onEndAnimate: function( anim ) {},
	            keyframes: [
	                { 
	         	        position: 0,
	         		    properties: {
                            "background-position" : {
                            	x:0,
                            	y:0
                            }
	         		    }	
	         	    },
	                {
	         	        position: 1,
	         		    ease: TWEEN.Easing.Linear.EaseNone,
	         		    properties: {
                            "background-position" : {
                            	x: -10000,
                            	y: -2000
                            }
	         		    }
	         	    }
	            ]
	        },
	        {
	            selector: '.meteor',
	            startAt: 0,
	            endAt: 3000,
	            onEndAnimate: function( anim ) {},
	            keyframes: [
	                { 
	         	        position: 0,
	         		    properties: {
	         		        "width": 50,
	         			    "right": 0,
	         			    "top": 0	         		    }	
	         	    },
	                {
	         	        position: 1,
	         		    ease: TWEEN.Easing.Quadratic.EaseInOut,
	         		    properties: {
	         		        "width": 457,
	         		        "right": 500,
	         		        "top": 250
	         		    }
	         	    }
	            ]
	        }               
        ], 
        scrollAnimConfig = {
            node: '#scrollanim-container',            // main container selector
            animations: animations,                   // animation data
            maxScroll: 3000                           // max scroll
        },
        scrollAnimWidget;

    scrollAnimWidget = new Y.ScrollAnim(scrollAnimConfig);
});
</script>
